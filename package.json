{
  "name": "eyedropper.app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Pick colors from the screen in Chromium browsers.",
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanbabcock/eyedropper.app.git"
  },
  "scripts": {
    "start": "vite --open",
    "dev": "vite --open",
    "deploy-prod": "env-cmd -f .env aws s3 sync dist s3://eyedropper.app",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "clsx": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitejs/plugin-react": "^4.0.4",
    "env-cmd": "^10.1.0",
    "eslint": "^8.48.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "prettier": "^3.0.3",
    "typescript": "5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-svgr": "^3.2.0"
  }
}
